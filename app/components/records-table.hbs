<div class="records-table" {{did-update this.recomputeTable @rows}}>
  <LightTable @table={{this.table}} @height="inherit" as |t|>
    <t.head @onColumnClick={{fn this.onColumnClick}} @iconAscending="fa fa-chevron-up"
            @iconDescending="fa fa-chevron-down" @fixed={{true}}/>

    <t.body @canSelect={{false}} @onScrolledToBottom={{fn this.onScrolledToBottom}}/>
  </LightTable>
</div>
