<div class="alert {{alertClass}} alert-dismissible" role="alert">
  <i class="alert-status-icon {{alertIconClass}}"></i>
  <div class="alert-message">
    {{yield}}
  </div>
  <button type="button" class="btn btn-danger btn-xs alert-close" data-dismiss="alert" aria-label="Close">
    {{fa-icon "close"}}
  </button>
</div>
