<div class="records-title">

  <span class="section-header">
    <h3 class="section-title">Records</h3>
    {{#info-popover title="Visualization"}}
      {{partial "partials/records-help"}}
    {{/info-popover}}
  </span>

  <span class="records-header">
    {{records.length}} records in this view
  </span>

  <div class="view-controls">
    {{#if enableCharting}}
      <button type="button" class="view-control chart-view line-chart-view {{if showLineChart "active"}}" {{action "lineChartMode"}} disabled={{showLineChart}}>
        {{fa-icon "line-chart"}}
        {{#tooltip-on-element}}Show as line chart{{/tooltip-on-element}}
      </button>
      <button type="button" class="view-control chart-view bar-chart-view {{if showBarChart "active"}}" {{action "barChartMode"}} disabled={{showBarChart}}>
        {{fa-icon "bar-chart"}}
        {{#tooltip-on-element}}Show as bar chart{{/tooltip-on-element}}
      </button>
    {{/if}}
    <button type="button" class="view-control table-view {{if showTable "active"}}" {{action "tableMode"}} disabled={{showTable}}>
      {{fa-icon "table"}}
      {{#tooltip-on-element}}Show as table{{/tooltip-on-element}}
    </button>
    <button type="button" class="view-control raw-view {{if showRawData "active"}}" {{action "rawDataMode"}} disabled={{showRawData}}>
      {{fa-icon "code"}}
      {{#tooltip-on-element}}Show raw data{{/tooltip-on-element}}
    </button>
    <div class="btn-group download-wrapper">
      <button type="button" class="view-control download dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        {{fa-icon "download"}}
      </button>
      <ul class="download-options dropdown-menu">
        <div class="triangle">
          <div class="inner"></div>
        </div>
        <li class="download-option"><a {{action "downloadAsJSON"}}>JSON</a></li>
        <li class="download-option"><a {{action "downloadAsCSV"}}>CSV</a></li>
        <li class="download-option"><a {{action "downloadAsFlatCSV"}}>Flat CSV</a></li>
      </ul>
    </div>
  </div>

</div>

<div class="records-display">
  {{#if showRawData}}
    {{records-raw-viewer data=records}}
  {{else if showTable}}
    {{records-table appendMode=appendMode timeSeriesMode=timeSeriesMode columnNames=columns rawRows=records}}
  {{else if showBarChart}}
    {{records-charter config=config columns=columns rows=records model=model chartType="bar"}}
  {{else if showLineChart}}
    {{records-charter config=config columns=columns rows=records model=model chartType="line"}}
  {{/if}}
</div>
