<div class="information-container segment-information">
  <span class="section-header">
    <h4 class="section-title">Metadata</h4>
    {{#info-popover title="Metadata"}}
      {{partial "partials/window-metadata-help"}}
    {{/info-popover}}
  </span>
  {{segment-metadata metadata=metadata}}
</div>

<div class="records-container">
  {{#if hasSegments}}
    {{#if result.isReallyRaw}}
      {{records-viewer model=result records=records metadata=metadata showRawData=true}}
    {{else}}
      {{records-viewer model=result records=records metadata=metadata showTable=true}}
    {{/if}}
  {{else}}
    {{partial "partials/no-data-help"}}
  {{/if}}
</div>
