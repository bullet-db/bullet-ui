<LightTable @table={{this.table}} @height="inherit"
            @tableActions={{hash resultClick=(fn this.resultClick)
                                 deleteResultsClick=(fn this.deleteResultsClick)}} as |t|>
  <t.head @onColumnClick={{action "onColumnClick"}} @fixed={{true}} @iconAscending="fa fa-chevron-up" @iconDescending="fa fa-chevron-down" />
  <t.body @canSelect={{false}} @scrollBuffer={{1000}} @onScrolledToBottom={{action "onScrolledToBottom"}} />
</LightTable>
