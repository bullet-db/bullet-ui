<div class="collapse-control">
  <span>Collapsible</span>
  <ModeToggle @isToggled={{isToggled}} @onToggled={{action (mut isToggled)}} />
  <EmberTooltip @side="left">Prettify and make your JSON collapsible</EmberTooltip>
</div>

 <div class="raw-display">
   {{#if isToggled}}
     <PrettyJson @data={{data}} @defaultLevels={{numberOflevels}} />
   {{else}}
     <pre class="raw-json-display">{{formattedData}}</pre>
   {{/if}}
 </div>
