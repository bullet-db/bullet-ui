{{!-- This breaks #if (await isUnsaved)}}
  <div class="query-unsaved">
    <i class="unsaved-icon fa fa-exclamation-triangle">
      {{#ember-tooltip side="bottom"}}Your query needs to be saved or has issues{{/ember-tooltip}}
    </i>
  </div>
{{/if--}}

<div class="query-description">
  {{#if row.name}}
    <p class="query-real-name"><strong>{{row.name}}</strong></p>
  {{else}}
    <QueryBlurb @summary={{row}} />
  {{/if}}
</div>
<div class="query-name-actions {{if hasHover "is-visible"}}">
  <i class="query-name-action-icon edit-icon fa fa-edit" {{action "editClick" bubbles=false}}>
    <EmberTooltip @side="bottom">Edit this query</EmberTooltip>
  </i>
  <i class="query-name-action-icon link-icon fa fa-share-square-o" {{action "linkClick" bubbles=false}}>
    <EmberTooltip @side="bottom">Create a link to this query that you can share</EmberTooltip>
  </i>
  <i class="query-name-action-icon copy-icon fa fa-clone" {{action "copyClick" bubbles=false}}>
    <EmberTooltip @side="bottom">Make a copy of this query without results</EmberTooltip>
  </i>
  <i class="query-name-action-icon delete-icon fa fa-trash-o" {{action "deleteClick" bubbles=false}}>
    <EmberTooltip @side="bottom">Delete this query and all results</EmberTooltip>
  </i>
</div>
