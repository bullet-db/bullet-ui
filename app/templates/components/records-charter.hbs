 {{#if canModeSwitch}}
   {{mode-toggle isToggled=simpleMode toggledText="Chart" notToggledText="Pivot" onToggled=(action (mut simpleMode))}}
 {{/if}}
 <div class="visual-container">
   {{#if pivotMode}}
     {{pivot-table rows=rows columns=columns initialOptions=pivotOptions onRefresh=(action "saveOptions")}}
   {{else}}
     {{ember-chart type=chartType data=data options=options}}
   {{/if}}
 </div>
