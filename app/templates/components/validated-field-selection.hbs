{{#if isInvalid}}
  {{partial "partials/validation-tooltip"}}
{{/if}}

{{yield}}

{{#unless disableField}}
  <div class="{{fieldClasses}} field-selection">
    {{column-field columns=columns disabled=disabled initialValue=model.field
                    subfieldKey="show_subfield" subfieldSeparator=subfieldSeparator subfieldSuffix=subfieldSuffix
                    onDone=(action "modifyField")}}
  </div>
{{/unless}}

{{#if enableRenaming}}
  <div class="{{nameClasses}} field-name">
    {{labeled-input fieldName="Display Name" fieldValue=model.name placeholder="Optional" disabled=disabled}}
  </div>
{{/if}}
<button {{action "deleteClicked"}} disabled={{disabled}} class="btn btn-danger btn-xs delete-button pull-right">
  <i class="glyphicon glyphicon-remove"></i>
</button>
