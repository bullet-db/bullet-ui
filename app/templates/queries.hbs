<div class="queries-list">
  <span class="section-header">
    <h3 class="section-title">All Queries</h3>
    <InfoPopover @title="All Queries">
      {{partial "partials/queries-help"}}
    </InfoPopover>
  </span>
  <div class="clearfix">
    <LinkTo @route="queries.new" @tagName="button" class="btn btn-primary btn-md add-button pull-left">
      {{fa-icon "plus"}}
      New Query
    </LinkTo>
  </div>
    <QueriesTable @queries={{model.queries}}
                  @queryClick={{route-action "queryClick"}} 
                  @copyQueryClick={{route-action "copyQueryClick"}}
                  @linkQueryClick={{route-action "linkQueryClick"}}
                  @deleteQueryClick={{route-action "deleteQueryClick"}}
                  @resultClick={{route-action "resultClick"}}
                  @deleteResultsClick={{route-action "deleteResultsClick"}} />
</div>
