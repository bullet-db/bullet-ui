<div class="queries-list">
  <span class="section-header">
    <h3 class="section-title">All Queries</h3>
    <InfoPopover @title="All Queries">
      <Popovers::QueriesHelp/>
    </InfoPopover>
  </span>
  <div class="clearfix">
    <LinkTo @route="queries.build" @tagName="button" class="btn btn-primary btn-md build-button add-button">
      {{fa-icon "plus"}}
      Build Query
    </LinkTo>
    <LinkTo @route="queries.bql" @tagName="button" class="btn btn-primary btn-md bql-button add-button">
      {{fa-icon "plus"}}
      BQL Query
    </LinkTo>
  </div>
    <QueriesTable @queries={{@model.queries}}
                  @queryClick={{fn (route-action "queryClick")}}
                  @copyQueryClick={{fn (route-action "copyQueryClick")}}
                  @linkQueryClick={{fn (route-action "linkQueryClick")}}
                  @deleteQueryClick={{fn (route-action "deleteQueryClick")}}
                  @resultClick={{fn (route-action "resultClick")}}
                  @deleteResultsClick={{fn (route-action "deleteResultsClick")}} />
</div>
