<div class="results-container">
  <div class="section query-section">
    <div class="information-container query-information">
      <QueryInformation @querySnapshot={{@model.result.querySnapshot}}
                        @reRunClick={{fn (route-action "reRunClick")}}
                        @cancelClick={{fn (route-action "cancelClick")}}
                        @queryClick={{fn (route-action "queryClick")}}/>
    </div>
  </div>

  <div class="section result-section">
    <div class="result-viewer-container">
      <ResultViewer @result={{@model.result}} @query={{@model.query}}/>
    </div>
  </div>
</div>
